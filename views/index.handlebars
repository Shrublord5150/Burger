<div class="container-fluid">

  <div class="row">
    <div class="col-6 burger-list">
      <h2>Eat these burger's before someone else does!</h2>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        <p>{{id}} {{burger_name}}</p>
        <div class="col-4"><button data-id="{{id}}" class="btn btn-default devour-btn">Devour
            it!</button></div>
        {{/unless}}
        {{/each}}

      </ul>
    </div>

    <div class="col-6 burger-list">
      <h2>These burgers have been devoured</h2>
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        <div class="row">
          <div class="col-xs-6 burger-list">
            <p>{{id}} {{burger_name}}</p>
          </div>
          {{/if}}
          {{/each}}
      </ul>

    </div>

    <form class="create-form mx-auto">

      <div class="form-group">
        <h2>Create your own burger!</h2>
        <label for="burger-input">Burger Name:</label>
        <input type="text" id="create-burger" name="burger_name">

      </div>
      <button type="submit">Create Burger</button>
    </form>